@import "/libs/wxParse/wxParse.wxss";

.menu{
  display: flex;
  flex-direction: column;
  position:  fixed;
  left: 40rpx;
  bottom: 80rpx;
  width: 80rpx;
  z-index: 2;
}
.menu_item{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 0;
  background-color:#000000;
  opacity: 0.5;
  border-radius: 40rpx;
}
.menu_item image{
  width: 60rpx;
  height: 60rpx;
}